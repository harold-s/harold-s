<div class="contextual">
  <%= link_to(l(:label_openid_source_new), { :action => 'new' }, :class => 'icon icon-add') %>
</div>

<h2><%= l(:label_openid_source_plural) %></h2>

<table class="list">
  <thead>
    <tr>
      <th><%= l(:field_name) %></th>
      <th><%= l(:field_url) %></th>
      <th><%= l(:field_active) %></th>
      <th><%= l(:label_user_plural) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @openid_sources.each do |source| %>
      <tr id="openid-source-<%= source.id %>" class="<%= cycle("odd", "even") %>">
        <td class="name"><%= link_to(h(source.name), :action => 'edit', :id => source) %></td>
        <td class="description"><%= h(source.url) %></td>
        <td class="center"><%= checked_image(source.active?) %></td>
        <td align="center"><%= source.users.count %></td>
        <td class="buttons">
          <%= link_to(l(:button_edit), { :action => 'edit', :id => source },
                                         :class => 'icon icon-edit') %>
          <%= link_to(l(:button_delete), { :action => 'destroy', :id => source },
                                           :method => :delete,
                                           :confirm => l(:text_are_you_sure),
                                           :class => 'icon icon-del') %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
